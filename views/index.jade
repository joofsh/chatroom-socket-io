extends layout

block content
  h1= title
  .container
    .row
      .col-lg-9
          form#user-name-form
            span Your Name:
            input#user-name(type='text', value='Anonymous')
            input#update-user-name.btn(type='button', value='update')
          #chatroom
          form#message-form
            textarea#new-message(rows='2', cols='50', maxlength='200')
            input.btn.btn-success(type='button', value='Send')
      .col-lg-3
        .panel.panel-default
          .panel-heading
            h4 Participants
          ul.list-group#participants
            - for user in users
              - var id = user.id
              li.list-group-item(id=id)= user.user_name

