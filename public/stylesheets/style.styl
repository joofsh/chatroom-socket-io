body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
  background-image: url('http://digitalfireflymarketing.com/sites/default/files/nodejs_0.png')

h1, h2
  margin 0
  font-size 22px
  color white
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px
  margin-bottom: 20px

textarea
  resize: none
  width: 90%
  margin-right: 5px

#user-name-form
  span
    color: white

#chatroom
  overflow-y: scroll
  height: 200px
  border: 2px solid rgba(0,0,0,0.3)
  margin: 2px auto
  background-color: white
  ul
    padding: 0
  p
    text-align: left
    margin: 0 0 0 5px

.red
  color: red

.green
  color: green


